<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, t('products.form.error', count: product.errors.count))%> <%= t('products.form.prohibited') %>:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('activerecord.attributes.product.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('activerecord.attributes.product.description'), style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label t('activerecord.attributes.product.price'), style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label t('activerecord.attributes.product.photo') %>
    <%= form.file_field :photo, aria: { label: t('file_fields.product.photo.aria_label') }, title: t('file_fields.product.photo.title') %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
