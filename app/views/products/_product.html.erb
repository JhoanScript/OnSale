<div id="<%= dom_id product %>">
  
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <% if show_description %>
    <p>
      <strong>Description:</strong>
      <%= product.description %>
    </p>
  <% end %>

  <p>
    <strong>Price:</strong>
    <%= product.price %>$
  </p>

</div>
